\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerfontthemesakura}[2016/06/09 Sakura font theme]
\RequirePackage{fontspec}
\RequirePackage[match]{luatexja-fontspec}
\RequirePackage[bold-style=ISO]{unicode-math}
\RequirePackage{arabluatex}

\setmainfont{TeX Gyre Termes}
\setsansfont[ItalicFont={NotoSans-Italic}]{Noto Sans}
\setsansjfont{Noto Sans JP}
\setmathfont{TeX Gyre Termes Math}
\setmonofont{Roboto Mono}
\newfontfamily\hangulfontsf{Noto Sans KR}
\newfontfamily\thaifontsf{Noto Sans Thai}
\newfontfamily\superbold{FrutigerLTStd-Black}
\renewcommand{\kanjifamilydefault}{\gtdefault}
\newfontfamily\arabicfont[%
  Script=Arabic,  % enable ligatures
  RawFeature={%
    +anum,  % use eastern arabic numerals
    +ss05   % put kasrah below shadda
  }]{Fira GO Light}
\newfontfamily\translitfont[Ligatures=TeX]{TeX Gyre Termes}
\SetTranslitFont{\translitfont}
\SetTranslitStyle{\itshape}  % \upshape, \itshape
\SetTranslitConvention{dmg}  % dmg, loc, arabica
\newjfontfamily\jsuperbold{HiraKakuStd-W8}
\setbeamerfont{title}{size=\Huge,family=\superbold\jsuperbold}
\setbeamerfont{frametitle}{size=\large,series=\bfseries}
\setbeamerfont{page number in head/foot}{family=\sffamily}
\setbeamerfont{author}{size=\Large}
\setbeamerfont{date}{size=\large}
\setbeamerfont{institute}{size=\large}
\setbeamerfont{caption name}{series=\bfseries}
\setbeamerfont{itemize/enumerate subbody}{size=\normalsize}
\setbeamerfont{itemize/enumerate subsubbody}{size=\normalsize}
